<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.quizapppro2">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_game_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_game_icon"
        android:supportsRtl="true"
        android:theme="@style/ModeloStyleDark"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Views.ScoreboardActivity"
            android:label="Puntuaciones Globales"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".Views.NameActivity" />

        <activity android:name=".Views.LeaderboardActivity" />

        <activity android:name=".Views.QuizGameActivity" />

        <activity
            android:name=".Views.Opciones2"
            android:label="Configuraciones"
            android:theme="@style/AppTheme" />

        <activity android:name=".Views.SingUpActivity" android:screenOrientation="portrait">

        </activity>
        <activity android:name=".Views.MainActivity"/>

        <activity android:name=".Views.LoginActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>