<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.Opciones2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temas"></TextView>

            <CheckBox
                android:id="@+id/todos_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/cine_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cine" />

                <CheckBox
                    android:id="@+id/historia_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historia" />

                <CheckBox
                    android:id="@+id/na1_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comics" />

                <CheckBox
                    android:id="@+id/matematicas_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matematicas" />

                <CheckBox
                    android:id="@+id/fisica_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fisica" />

                <CheckBox
                    android:id="@+id/na2_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videojuegos" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="No. de preguntas" />

            <Spinner
                android:id="@+id/numbers_quest_spinner"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:spinnerMode="dialog" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificultad" />

        <RadioGroup
            android:id="@+id/radio_group_dificultad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/baja_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:onClick="onRadioButtonClick"
                android:text="Facil"
                android:layout_marginLeft="5dp" />

            <RadioButton
                android:id="@+id/media_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:onClick="onRadioButtonClick"
                android:text="Intermedia"
                android:layout_marginLeft="5dp" />

            <RadioButton
                android:id="@+id/alta_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:onClick="onRadioButtonClick"
                android:text="Dificil"
                android:layout_marginLeft="5dp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Switch
            android:id="@+id/pistas_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Habilitar Pistas"
            android:textAlignment="viewStart"
            android:gravity="start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. de pistas" />

            <Spinner
                android:id="@+id/numbers_cheat_no_spinner"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:spinnerMode="dialog" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>